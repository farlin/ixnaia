<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Class Report</div>
  <div class="panel-body">
    <p>Please click on individual class report to see how your students are tracking</p>
  </div>
  
<table class="table">
  <thead>
    <tr>
      <th>Class Name</th>
	  <th>Assigned Teacher</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @klasses.each do |klass| %>
      <tr>
        <td><%= klass.name %></td>
		<td><%= klass.teacher.name %></td>
        <td><%= link_to 'View Report', klass %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>